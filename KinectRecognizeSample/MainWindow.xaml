<Window x:Class="KinectRecognizeSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectRecognizeSample"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" Loaded="Window_Loaded" Closing="Window_Closing">
    <StackPanel>
        <Grid>
            <Image x:Name="ImageColor" Width="960" Height="540" />
            <Canvas x:Name="CanvasBody"  Width="960" Height="540"/>
        </Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="Normal" Text="a"/>
            <TextBlock x:Name="Camera" Text="a"/>
            <TextBlock x:Name="Color" Text="a"/>
            <TextBlock x:Name="Depth" Text="a"/>
        </StackPanel>
    </StackPanel>
</Window>